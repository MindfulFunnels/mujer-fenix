---
import Youtube from "./Youtube.astro";
interface EventTime {
  country: string;
  time: string;
  flag: string;
}
interface Props {
  whenWhere: string;
  dateLabel: string;
  date: string;
  timeLabel: string;
  times: { time: string; flag: string }[];
  platformLabel: string;
  importantLabel: string;
  importantText: string;
}
const {
  whenWhere,
  dateLabel,
  date,
  timeLabel,
  times,
  platformLabel,
  importantLabel,
  importantText,
} = Astro.props;
---

<div class='flex flex-col items-center'>
  <div
    class='bg-[color:var(--color-primary)] border-white border p-6 rounded-lg transition-all duration-300 flex flex-col gap-4 items-center w-full'
  >
    <div class='flex items-center justify-center flex-col'>
      <svg
        class='w-6 sm:w-7 md:w-8 h-6 sm:h-7 md:h-8 text-[color:var(--color-accent)]'
        fill='none'
        stroke='currentColor'
        viewBox='0 0 24 24'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          stroke-width='2'
          d='M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z'
        ></path>
      </svg>
      <h3
        class='text-lg sm:text-xl md:text-2xl font-semibold text-white mb-1 sm:mb-2'
      >
        {whenWhere}
      </h3>
    </div>
    <div
      class='flex flex-col items-center text-center bg-[color:var(--color-secondary)] rounded-lg border-white w-full hover:scale-105 transition-all border p-4'
    >
      <h3 class='text-white mb-1 sm:mb-2'>{dateLabel}</h3>
      <p class='textevent text-white'>{date}</p>
    </div>
    <div
      class='bg-[color:var(--color-secondary)] border-white border p-4 sm:p-5 md:p-6 rounded-lg transform hover:scale-105 transition-all duration-300 flex flex-col items-center text-center w-full'
    >
      <h3 class='text-white mb-1 sm:mb-2'>{timeLabel}</h3>
      {
        times.map((t) => (
          <p class='textevent text-white flex items-center justify-center gap-2'>
            <span class={t.flag} />
            {t.time}
          </p>
        ))
      }
    </div>

    <div
      class='p-4 sm:p-5 md:p-6 bg-[color:var(--color-secondary)] rounded-lg border-white border'
    >
      <div class='flex items-center justify-center mb-2 sm:mb-3 md:mb-4'>
        <svg
          class='w-5 sm:w-6 h-5 sm:h-6 text-[color:var(--color-accent)] mr-2'
          fill='none'
          stroke='currentColor'
          viewBox='0 0 24 24'
        >
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='2'
            d='M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
          ></path>
        </svg>
        <h3 class='text-base sm:text-lg md:text-xl text-white'>
          {importantLabel}
        </h3>
      </div>
      <p class='text-center text-sm sm:text-base md:text-lg text-white'>
        {importantText}
      </p>
    </div>
  </div>
</div>

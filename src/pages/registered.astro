---
import Layout from "../layouts/Layout.astro";
import RegisteredDashboard from "../components/RegisteredDashboard";
---

<Layout hideNav={true}>
  <div class="dashboard-container">
    <img src="/cover.png" alt="Background cover" class="background-image" />
    <div class="background-overlay"></div>

    <div class="dashboard-content">
      <h1 class="dashboard-title">Dashboard de Registered</h1>
      <RegisteredDashboard client:load />
    </div>
  </div>
</Layout>

<style>
  .dashboard-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    position: relative;
    overflow: hidden;
  }

  .dashboard-content {
    width: 100%;
    max-width: 800px;
    background-color: rgba(255, 255, 255, 0.05);
    padding: 2rem;
    border-radius: 1rem;
    backdrop-filter: blur(10px);
    box-shadow: 0 0 30px rgba(0, 0, 0, 0.3);
    z-index: 1;
  }

  .dashboard-title {
    font-size: 2.5rem;
    color: white;
    text-align: center;
    margin-bottom: 2rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .background-image {
    position: fixed;
    left: 0;
    top: 0;
    height: 100vh;
    width: auto;
    object-fit: cover;
    opacity: 0.35;
    mix-blend-mode: overlay;
    z-index: -3;
  }

  .background-overlay {
    position: fixed;
    inset: 0;
    background: linear-gradient(to right, rgba(0, 13, 36, 0.6), transparent);
    z-index: -2;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    color: white;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 10px;
    overflow: hidden;
  }

  th,
  td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  th {
    background-color: rgba(255, 255, 255, 0.1);
    font-weight: bold;
  }

  tr:last-child td {
    border-bottom: none;
  }

  p {
    color: white;
    text-align: center;
    margin-bottom: 1rem;
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    .dashboard-title {
      font-size: 2rem;
    }

    th,
    td {
      font-size: 0.9rem;
      padding: 0.75rem;
    }
  }
</style>
